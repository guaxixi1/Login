<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:foreground = "?attr/selectableItemBackground">
    <RelativeLayout
        android:id="@+id/activity_login_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        >
        <TextView
            android:layout_marginTop="18dp"
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="#fcfdff"
            android:text="登陆"
         />
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/logo"
            android:layout_below="@+id/text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="80dp"/>
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/activity_first_card"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_margin="18dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                >
                <ImageView
                    android:id="@+id/activity_first_card_account_image"
                    android:layout_margin="5dp"
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_login_account"/>
                <EditText
                    android:id="@+id/activity_first_card_account_edit"
                    android:layout_toRightOf="@id/activity_first_card_account_image"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="20dp"
                    android:hint="请输入用户名"
                    android:textColorHint="#999"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"/>
                <TextView
                    android:background="#dbd8d8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>

                </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                >
                <ImageView
                    android:id="@+id/activity_first_card_password_image"
                    android:layout_margin="5dp"
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_login_password"/>
                <EditText
                    android:id="@+id/activity_first_card_password_edit"
                    android:layout_toRightOf="@id/activity_first_card_password_image"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="20dp"
                    android:hint="请输入密码"
                    android:textColorHint="#999"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"/>
                <TextView
                    android:background="#dbd8d8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

                <TextView

                    android:layout_margin="@dimen/margin"
                    android:background="@drawable/shape"
                    android:gravity="center"
                    android:padding="5dp"
                    android:id="@+id/activity_first_card_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="登录"
                    android:foreground = "?attr/selectableItemBackground"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
<RelativeLayout
    android:layout_below="@id/activity_first_card"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/activity_text"
        android:layout_marginLeft="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#293c47"
        android:text="还没有账户？"/>
    <TextView
        android:id="@+id/activity_first_to_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/activity_text"
        android:textColor="#2b2222"
        android:text="注册"/>
</RelativeLayout>
</RelativeLayout>
